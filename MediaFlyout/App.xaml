<Application x:Class="MediaFlyout.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bcl="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:MediaFlyout"
             StartupUri="MediaFlyoutWindow.xaml"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./FluentWPF/Styles/Button.xaml" />
                <ResourceDictionary Source="./Styles/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <bcl:String x:Key="TrayIconPlay">pack://application:,,,/MediaFlyout;component/Resources/Icon_Play.ico</bcl:String>
            <bcl:String x:Key="TrayIconPause">pack://application:,,,/MediaFlyout;component/Resources/Icon_Pause.ico</bcl:String>
            <bcl:String x:Key="TrayIconPlay_11">pack://application:,,,/MediaFlyout;component/Resources/Icon_Play_11.ico</bcl:String>
            <bcl:String x:Key="TrayIconPause_11">pack://application:,,,/MediaFlyout;component/Resources/Icon_Pause_11.ico</bcl:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
